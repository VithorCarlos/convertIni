{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDirs": [
      "."
    ],
  },
  
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}